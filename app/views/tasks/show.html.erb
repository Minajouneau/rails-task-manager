
<h1><%= @task.title %></h1>

<%= link_to "Edit this task", tasks_edit_path %>


<div>
  <p><%= @task.details %></p>
</div>
<% if @task.completed %>
  <input type="checkbox" name="checkbox" checked> <label for="checkbox"> task is completed</label>
<% else %>
  <input type="checkbox" name="checkbox"> <label for="checkbox"> task is not completed<br></label>
<% end %>


<%= link_to "Back to all tasks", tasks_path %>
